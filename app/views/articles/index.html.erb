<h1>Wikiful Articles</h1>

  <div class="row-fluid">

  <%= render 'articles/indexdropdown' %>

  <div class="span4">
<%= will_paginate @articles %>
  </div>
      <div class="span4 btn-group"> 
        <div class="pull-right"><button type="button" class="btn btn-primary"><%= link_to 'Contribute a New Article', new_article_path %> </btn></div>
      </div>
  </div>



<!-- The table that displays -->

  <%= render 'articles/headerwells' %>

  
  <% @articles.each do |article| %>
  <div class="row-fluid">
    <div class="span4"><%= link_to article.title, article_path(article) %></div>
    <div class="span4 center">
    
            <% article.categories.each do |category| %>
               <button class="btn"><%= link_to category.name, category_path(category) %> </button>
            <% end %>

    </div>
    <div class="span4 center"><%= link_to article.user.name, user_path(article.user) %></div>
    </div>
  <hr>
  <% end %>
