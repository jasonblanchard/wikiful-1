    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
   
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :school %>
    <%= f.select :school, options_for_select(SCHOOLS.sort) %>

    <%= f.label :department %>
    <%= f.select :department, options_for_select(DEPARTMENTS.sort) %>


    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
